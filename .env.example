# Memory MCP Server Environment Variables
# Copy this file to .env and customize the values

# Database Configuration
# DB_URL=sqlite:///memory_mcp.db
# DB_ECHO=false
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# Server Configuration
# SERVER_HOST=localhost
# SERVER_HTTP_PORT=8000
# SERVER_WEB_PORT=8080
# SERVER_STDIO_ENABLED=true
# SERVER_HTTP_ENABLED=true
# SERVER_WEB_ENABLED=true

# Embedding Configuration
# EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
# EMBEDDING_EMBEDDING_DIM=384
# EMBEDDING_SIMILARITY_THRESHOLD=0.3
# EMBEDDING_MAX_RESULTS=10
# EMBEDDING_CACHE_EMBEDDINGS=true
# EMBEDDING_SEMANTIC_WEIGHT=0.7
# EMBEDDING_AUTO_INDEX=true

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# LOG_FILE_PATH=memory_mcp.log
# LOG_MAX_FILE_SIZE=10485760
# LOG_BACKUP_COUNT=5

# Production Database Examples (uncomment and modify as needed)
# PostgreSQL
# DB_URL=postgresql://username:password@localhost:5432/memory_mcp

# MySQL
# DB_URL=mysql://username:password@localhost:3306/memory_mcp

# Production Server Settings
# SERVER_HOST=0.0.0.0
# SERVER_CORS_ORIGINS=["https://yourdomain.com"]

# High-Quality Embedding Model (larger, slower, but better results)
# EMBEDDING_MODEL_NAME=all-mpnet-base-v2
# EMBEDDING_EMBEDDING_DIM=768
# EMBEDDING_SIMILARITY_THRESHOLD=0.5

# Multilingual Support
# EMBEDDING_MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2
# EMBEDDING_EMBEDDING_DIM=384